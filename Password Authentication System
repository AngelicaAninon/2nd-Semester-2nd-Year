password = "Cutie"  
attempts_left = 5

while attempts_left > 0:
    user = input("Please enter your password:")
    if user == password:
        print("You are logged in to the system.\n")
        break
    else:
        attempts_left -= 1
        print("Wrong password. Re-enter your password. You have", attempts_left, "tries left.\n")
        
else:
    print("You are kicked off of the system.")
